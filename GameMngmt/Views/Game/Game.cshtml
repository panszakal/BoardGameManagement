@using Models;

@{
    ViewBag.Title = "Games";
}
<div>
    <h2>
        Game List
        <button style="float:right" class="btn btn-primary pull-right" onclick="@("window.location.href='" + @Url.Action("Create", "Game") + "'");">Add new game</button>
    </h2>
</div>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="gametable" cellspacing="0">
            <thead>
                <tr>
                    <th class="th-sm sorting" scope="col">Game Name</th>
                    <th scope="col">Buttons</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.GameName</td>
                        <td>
                            <button class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("Edit", "Game", new { @game.ID }) + "'");">edit</button>
                            <button class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("Delete", "Game", new { @game.ID }) + "'");">delete</button>
                            <button class="btn btn-info" onclick="@("window.location.href='" + @Url.Action("Details", "Game", new { @game.ID }) + "'");">show details</button>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/datatables/js/jquery.dataTables.min.js"></script>
<link href="~/Scripts/datatable/css/datatable-bootstrap.min.css" rel="stylesheet" />

<script type="text/javascript">

    $(document).ready(function () {
        $('#gametable').DataTable({
            "pagingType": "simple"
        });
        $('.dataTables_length').addClass('bs-select');
    });

</script>



